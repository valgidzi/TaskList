<h2>Tasklist</h2>
<%= link_to "Add a Task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li> <%= task.name %> </li>
    <%= link_to "(View Details)", task_path(task) %>
    <%= link_to "Edit Task", edit_task_path(task.id)%>
    <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
    <%= link_to "Mark Complete", mark_complete_task_path(task) %>
  <% end %>
</ul>
