<%= form_with model: @task do |f| %>

  <h2>New Task Form</h2>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Create New Task" %>

<% end %>
